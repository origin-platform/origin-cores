<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.jyusun.origin.core.db.base.BaseRepoMapper">
    <!-- 通用映射关系 仅ID -->
    <resultMap id="BaseSimplifyMap" type="com.jyusun.origin.core.db.data.BaseDataSimplify">
        <id column="id" property="id" javaType="long" jdbcType="BIGINT"/>
        <result column="remarks" property="remarks" javaType="java.lang.Boolean" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP"/>
        <result column="updated_time" property="updateTime" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 通用映射关系 BaseData-->
    <resultMap id="BaseResultMap" type="com.jyusun.origin.core.db.data.BaseData" extends="BaseSimplifyMap">
        <result column="creator" property="creator" javaType="java.lang.Long" jdbcType="BIGINT"/>
        <result column="update_man" property="updateMan" javaType="java.lang.Long" jdbcType="BIGINT"/>
        <result column="deleted" property="deleted" javaType="java.lang.Boolean" jdbcType="TINYINT"/>
        <result column="revision" property="revision" javaType="java.lang.Boolean" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 数据库通用列-->
    <sql id="BaseSimplifyList">
        id,
        remarks,
        creator,
        create_time
    </sql>

    <!-- 数据库通用列-->
    <sql id="BaseColumnList">
        id,
        remarks,
        creator,
        create_time,
        update_man,
        updated_time,
        deleted,
        revision

    </sql>

    <!-- mysql分页通用结尾 -->
    <sql id="pageEnd">
        limit #{page.offsetPara,jdbcType=INTEGER} ,#{page.limitPara,jdbcType=INTEGER}
    </sql>

    <sql id="like_left">
        concat('%',
    </sql>

    <sql id="like_right">
        ,'%')
    </sql>

    <sql id="increment_sql">
        select LAST_INSERT_ID() as value
    </sql>
</mapper>